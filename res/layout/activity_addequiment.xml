        <RadioButton
            android:id="@+id/jog"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/jog" />
        <RadioButton
            android:id="@+id/linkage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/linkage" />
    </RadioGroup> -->
    
    
    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp" 
        android:background="@color/top"
        android:text="@string/saveequ"
        android:textColor="@color/switch_thumb_material_light"
        android:textSize="15sp"
        android:onClick="saveequ"/>
    
    <!-- <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp" 
        android:background="@color/top"
        android:text="@string/savefromscan"
        android:textColor="@color/switch_thumb_material_light"
        android:textSize="15sp"
        android:onClick="savefromscan"/> -->
    
    <TextView android:id="@+id/showmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:text="@string/equexist"
        android:visibility="invisible"
        android:textSize="15sp"/>

</LinearLayout>  
</ScrollView >